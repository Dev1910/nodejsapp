<!DOCTYPE html>
<html>
  <head>
    <title>To-Do List</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <h1>To-Do List</h1>
    <form action="/add" method="POST">
      <input type="text" name="task" placeholder="Add a task" required>
      <button type="submit">Add</button>
    </form>
    <ul>
      <% tasks.forEach((task) => { %>
        <li><%= task %></li>
      <% }); %>
    </ul>
  </body>
</html>
